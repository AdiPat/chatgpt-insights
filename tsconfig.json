{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifier": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/tests/**/*.ts"]
}
